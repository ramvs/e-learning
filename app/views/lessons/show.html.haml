.row
  .col-md-8
    .panel.panel-default
      .panel-heading
        = lesson.title
        %span.pull-right
          = lesson.edit_link
          = lesson.destroy_link
      .panel-body.lesson-content
        = lesson.content
      .panel-heading
        Timestamps
      - if lesson.extern_video_url.present?
        .row
        = render 'embedvideo'
  .col-md-4
    .row
      = render 'description'
    .row
      = render 'test'
    .row
      = render 'attachements'